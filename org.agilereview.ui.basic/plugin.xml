<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.agilereview.core.ReviewDataReceiver">
      <ReviewDataReceiver
            class="org.agilereview.ui.basic.commentSummary.table.ContentProvider"
            id="org.agilereview.ui.basic.commentSummary.table.ContentProvider">
      </ReviewDataReceiver>
      <ReviewDataReceiver
            class="org.agilereview.ui.basic.reviewExplorer.REDataReceiver"
            id="org.agilereview.ui.basic.reviewExplorer.REDataReceiver">
      </ReviewDataReceiver>
      <ReviewDataReceiver
            class="org.agilereview.ui.basic.detail.DetailDataReceiver"
            id="org.agilereview.ui.basic.detail.DetailDataReceiver">
      </ReviewDataReceiver>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.agilereview.ui.basic.category"
            class="org.agilereview.ui.basic.reviewExplorer.ReviewExplorerView"
            id="org.agilereview.ui.basic.reviewExplorerView"
            name="ReviewExplorer"
            restorable="true">
      </view>
      <view
            category="org.agilereview.ui.basic.category"
            class="org.agilereview.ui.basic.commentSummary.CommentSummaryView"
            id="org.agilereview.ui.basic.commentSummaryView"
            name="Comments Summary"
            restorable="true">
      </view>
      <category
            id="org.agilereview.ui.basic.category"
            name="AgileReview BasicUI"
            parentCategory="org.agilereview.ui.basic.category">
      </category>
      <view
            category="org.agilereview.ui.basic.category"
            class="org.agilereview.ui.basic.detail.DetailView"
            id="org.agilereview.ui.basic.detailView"
            name="Detail"
            restorable="true">
      </view>
   </extension>
   <extension
         id="commented"
         point="org.eclipse.core.resources.markers">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
         allPopups="false"
         locationURI="toolbar:org.agilereview.ui.basic.reviewExplorerView">
      <command
            commandId="org.agilereview.core.newReview"
            label="Create new review"
            style="push"
            tooltip="Create a new review">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.toolbar.separator1"
            visible="true">
      </separator>
      <command
            commandId="org.agilereview.core.activateReview"
            label="Activate selected review"
            style="push"
            tooltip="Activate selected review">
      </command>
      <command
            commandId="org.agilereview.core.openCloseReview"
            label="Open/Close selected reviews"
            style="push"
            tooltip="Open/Close reviews">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.toolbar.separator2"
            visible="true">
      </separator>
      <command
            commandId="org.eclipse.ui.navigate.expandAll"
            label="Expand all sub nodes"
            style="push">
      </command>
      <command
            commandId="org.eclipse.ui.navigate.collapseAll"
            label="Collapse all sub nodes"
            style="push">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.toolbar.separator3"
            visible="true">
      </separator>
      <command
            commandId="org.eclipse.ui.file.export"
            label="Export..."
            style="push">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.toolbar.separator4">
      </separator>
      <command
            commandId="org.agilereview.ui.basic.linkReviewExplorer"
            label="Link Review Explorer for filtering"
            style="toggle">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.toolbar.separator5"
            visible="true">
      </separator>
   </menuContribution>
   <menuContribution
         allPopups="true"
         locationURI="popup:org.agilereview.ui.basic.reviewExplorerView">
      <command
            commandId="org.agilereview.core.newReview"
            label="Create new review"
            style="push"
            tooltip="Create a new review">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.popup.separator1"
            visible="true">
      </separator>
      <command
            commandId="org.eclipse.ui.file.refresh"
            label="Refresh all reviews"
            style="push">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.popup.separator2"
            visible="true">
      </separator>
      <command
            commandId="org.eclipse.ui.edit.delete"
            label="Delete"
            style="push">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.popup.separator3"
            visible="true">
      </separator>
      <command
            commandId="org.agilereview.core.activateReview"
            label="Activate selected review"
            style="push"
            tooltip="Activate selected review">
         <visibleWhen
               checkEnabled="true">
         </visibleWhen>
      </command>
      <command
            commandId="org.agilereview.core.openCloseReview"
            label="Open/Close selected reviews"
            style="push"
            tooltip="Open/Close reviews">
         <visibleWhen
               checkEnabled="true">
         </visibleWhen>
      </command>
      <command
            commandId="org.eclipse.ui.navigate.expandAll"
            label="Expand all subnodes"
            style="push">
      </command>
      <command
            commandId="org.eclipse.ui.navigate.collapseAll"
            label="Collapse all sub nodes"
            style="push">
      </command>
      <separator
            name="org.agilereview.ui.basic.reviewexplorer.popup.separator4">
      </separator>
      <command
            commandId="org.eclipse.ui.file.export"
            label="Export..."
            style="push">
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="toolbar:org.agilereview.ui.basic.commentSummaryView">
      <command
            commandId="org.agilereview.core.newComment"
            label="Add new Comment"
            style="push"
            tooltip="Add new Comment">
      </command>
   </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.agilereview.ui.basic.reviewExplorer.handler.RECollapseHandler"
            commandId="org.eclipse.ui.navigate.collapseAll">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <or>
                     <instanceof
                           value="org.agilereview.core.external.storage.Review">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
         <activeWhen>
            <with
                  variable="activePart">
               <instanceof
                     value="org.agilereview.ui.basic.reviewExplorer.ReviewExplorerView">
               </instanceof>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.agilereview.ui.basic.reviewExplorer.handler.REExpandHandler"
            commandId="org.eclipse.ui.navigate.expandAll">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <or>
                     <instanceof
                           value="org.agilereview.core.external.storage.Review">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
         <activeWhen>
            <with
                  variable="activePart">
               <instanceof
                     value="org.agilereview.ui.basic.reviewExplorer.ReviewExplorerView">
               </instanceof>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.agilereview.ui.basic.reviewExplorer.handler.OpenCloseReviewHandler"
            commandId="org.agilereview.core.openCloseReview">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.agilereview.core.external.storage.Review">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
               </and>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.agilereview.ui.basic.reviewExplorer.handler.ActivateReviewHandler"
            commandId="org.agilereview.core.activateReview">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.agilereview.core.external.storage.Review">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
               </and>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.agilereview.ui.basic.reviewExplorer.handler.NewReviewHandler"
            commandId="org.agilereview.core.newReview">
      </handler>
      <handler
            class="org.agilereview.ui.basic.commentSummary.handler.NewCommentHandler"
            commandId="org.agilereview.core.newComment">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.agilereview.perspective">
         <view
               id="org.agilereview.ui.basic.reviewExplorerView"
               minimized="false"
               ratio="0.2f"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.agilereview.ui.basic.commentSummaryView"
               minimized="false"
               ratio="0.7f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.agilereview.ui.basic.detailView"
               minimized="false"
               ratio="0.8f"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Basic UI commands"
            id="org.agilereview.ui.basic.commands"
            name="Basic UI commands">
      </category>
      <command
            category="org.agilereview.ui.basic.commands"
            categoryId="org.agilereview.ui.basic.commands"
            defaultHandler="org.agilereview.ui.basic.reviewExplorer.handler.LinkReviewExplorerHandler"
            description="Links the review explorer to the filtering mechanism"
            id="org.agilereview.ui.basic.linkReviewExplorer"
            name="Link ReviewExplorer">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.agilereview.ui.basic.linkReviewExplorer"
            disabledIcon="IMG_ELCL_SYNCED_DISABLED"
            icon="IMG_ELCL_SYNCED">
      </image>
   </extension>

</plugin>
